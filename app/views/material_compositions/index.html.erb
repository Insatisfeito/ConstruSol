<section id="main-content" class="animated fadeInUp">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Tabela de Consulta</h3>
          <div class="actions pull-right">
            <i class="fa fa-expand"></i>
            <i class="fa fa-chevron-down"></i>
            <i class="fa fa-times"></i>
          </div>
        </div>
        <div class="panel-body">
          <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
              <tr class="designacoes">
                <th width="30%">Descrição</th>
                <th>Tipo</th>
                <th>Espessura <div class="measure">(m)</div></th>
                <th>Peso <div class="measure">(Kg)</div></th>
                <th>Resistência Térmica <div class="measure">(λ)</div></th>
                <th>Custo de construção <div class="measure">(€)</div></th>
                <th>Custo de Manutenção <div class="measure">(€)</div></th>
              </tr>
            </thead>
            <tbody>
               <% @material_compositions.each do |matcomp| %>
              <tr>
                <td><%= link_to matcomp.description, matcomp %></td>
                <td><%= matcomp.type_name %></td>
                <td><%= matcomp.calcWidth %></td>
                <td><%= matcomp.weight_calc %></td>
                <td><%= matcomp[:lambda] %></td>
                <td><%= matcomp.construction_cost %></td>
                <td><%= matcomp.maintenance_cost %></td>
              </tr>
              <% end %>

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>


