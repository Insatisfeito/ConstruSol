
<div class="pageheader">
  <h2>Comparação de Soluções Construtivas</h2>
  <p class="description">Comparar os Impactos Ambientais entre Soluções Construtivas</p>
  <div class="breadcrumb-wrapper hidden-xs">
    <span class="label">Estás aqui:</span>
    <ol class="breadcrumb">
      <li class="active">Comparação de Soluções Construtivas</li>
      <li class="active">Escolher soluções</li>
    </ol>
  </div>
</div>
<section id="main-content" class="animated fadeInUp" >
  <div class="row">
  <div class="col-md-7">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Tabela de Consulta</h3>
          <div class="actions pull-right">
            <i class="fa fa-expand"></i>
            <i class="fa fa-chevron-down"></i>
            <i class="fa fa-times"></i>
          </div>
        </div>
        <div class="panel-body">
          <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
              <tr class="designacoes">
                <th>REF.</th>
                <th width="70%">Nome</th>
                <th>Tipo</th>
              </tr>
            </thead>
            <tbody>
              <% @construsolutions.each do |cons| %>
              <tr>
                <td><%= cons.ref %></td>
                <td><%= link_to cons.name, cons %></td>
                <td><%= cons.construtype == 0 ? "Não Ventilado" : "Ventilado" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <div class="panel panel-default">
        <div class="panel-body" style="min-height: 600px">
        <%= form_for :solutions_compare, :html => {:class => 'form-horizontal form-border'}  do |f| %>
           <h2>Adicionar Solução Construtiva para comparaçào</h2>
           <p>Pode comparar até 3 soluções.</p>
                  <%= f.select :solutions_compare_ids, Construsolution.all.collect {|x| [x.ref+" - "+x.name, x.id]}, {}, {:multiple => true, :class => "chosen-select-compare", :style=>"min-width:200px !important;max-width:400px !important"} %>
          <br/><br/><br/><br/>
          <%= f.submit "Comparar", :class => "btn btn-success" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</section>


