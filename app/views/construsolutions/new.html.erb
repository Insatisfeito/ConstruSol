<div class="pageheader">
  <h2>Solução Construtiva</h2>
  <p class="description">Criar nova solução construtiva</p>
  <div class="breadcrumb-wrapper hidden-xs">
    <span class="label">Estás aqui:</span>
    <ol class="breadcrumb">
      <li class="active">Soluçiões Construtivas</li>
      <li class="active">Criar nova</li>
    </ol>
  </div>
</div>
<section id="main-content" class="animated fadeInUp">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default" style="min-height: 600px">
        <div class="panel-heading">
          <h3 class="panel-title">Nova Solução Construtiva</h3>
        </div>
        <div class="panel-body">
          <%= form_for @construsolution, :html => {:class => 'form-horizontal form-border'}  do |f| %>
          <div class="col-md-5">
            <div class="form-group">
              <label class="col-sm-3 ">Nome</label>
              <div class="col-sm-9">
                <%= f.text_field :name, class:"form-control", :required => true %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 ">Referência</label>
              <div class="col-sm-9">
                <%= f.text_field :ref , class:"form-control", :required => true%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 ">Imagem</label>
              <div class="col-sm-9">
                <%= f.file_field :cimage %>
              </div>
            </div>
            <input type="hidden" id="construsolution_type" name="construsolution[construtype]" value="0" />
            <div style="text-align: center;margin:50px;">
              <a href="/construsolutions" class="btn btn-default btn-trans">Voltar atrás</a>
              <%= f.submit :class => "btn btn-success" %>
            </div>
          </div>
          <div class="col-md-7">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Tipo de Solução Construtiva</h3>
              </div>
              <div class="panel-body">
                <div class="tab-wrapper tab-primary">
                  <ul class="nav nav-tabs">
                    <li class="active"><a href="#panel1" id="panel1link" data-toggle="tab" aria-expanded="true">Nova Parede Não-Ventilada</a>
                  </li>
                  <li class=""><a href="#panel2" id="panel2link" data-toggle="tab" aria-expanded="false">Nova Parede Ventilada</a>
                </li>
              </ul>
              <div class="tab-content">
                <div class="tab-pane active" id="panel1">
                  <h2>Adicionar Material:</h2>
                  <%= f.select :material_nv_ids, MaterialComposition.all.collect {|x| [x.description, x.id]}, {}, {:multiple => true, :class => "chosen-select", :style=>"min-width:200px !important;max-width:400px !important"} %>
                  <br/>
                </div>
                <div class="tab-pane" id="panel2">
                  <h2>Adicionar Material à Camada Exterior:</h2>
                  <%= f.select :material_ext_ids, MaterialComposition.all.collect {|x| [x.description, x.id]}, {}, {:multiple => true, :class => "chosen-select", :style=>"min-width:200px !important;max-width:400px !important"} %>
                  <br/>
                  <h2>Adicionar Material à Camada Interior:</h2>
                  <%= f.select :material_int_ids, MaterialComposition.all.collect {|x| [x.description, x.id]}, {}, {:multiple => true, :class => "chosen-select", :style=>"min-width:200px !important;max-width:400px !important"} %>
                  <br/>
                </div>
              </div>
              <p>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
</div>
</div>
</div>
</section>
