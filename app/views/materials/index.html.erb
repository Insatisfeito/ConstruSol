<div class="pageheader">
  <h2>Materiais</h2>
  <p class="description">Consulta de lista de materiais</p>
  <div class="breadcrumb-wrapper hidden-xs">
    <span class="label">You are here:</span>
    <ol class="breadcrumb">
      <li class="active">Blank Page</li>
    </ol>
  </div>
</div>

<section id="main-content" class="animated fadeInUp">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Data Tables</h3>
          <div class="actions pull-right">
            <i class="fa fa-expand"></i>
            <i class="fa fa-chevron-down"></i>
            <i class="fa fa-times"></i>
          </div>
        </div>
        <div class="panel-body">
          <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
              <tr style="text-align: center" class="designacoes">
                <th>Nome</th>
                <th>Espessura  <div class="measure">(m)</div></th>
                <th>λ <div class="measure">(W/m.ºC)</div></th>
                <th>ADP <div class="measure">(kb Sb eq)</div></th>
                <th>GWP <div class="measure">(Kg CO<span style="font-size: 8px">2</span> eq)</div></th>
                <th>ODP <div class="measure">(Kg CGC-11 eq)</div></th>
                <th>AP <div class="measure">(Kg SO<span style="font-size: 8px">2</span> eq)</div></th>
                <th>POPC <div class="measure">(Kg C<span style="font-size: 8px">2</span>H<span style="font-size: 8px">4</span> eq)</div></th>
                <th>EP <div class="measure">(Kg PO4 eq)</div></th>
                <th>ENR <div class="measure">(MJ eq)</div></th>
                <th>ER <div class="measure">(MJ eq)</div></th>
                <th>Peso <div class="measure">(KG/m<sup>2</sup>)</div></th>
                <th>Custo <div class="measure">(€/m<sup>2</sup>)</div></th>
              </tr>
            </thead>
            <tbody>
              <% @materials.each do |material| %>
              <tr>
                <td><%= material.name %></td>
                <td><%= material.e %></td>
                <td><%= material.lambda %></td>
                <td><%= material.adp %></td>
                <td><%= material.gwp %></td>
                <td><%= material.odp %></td>
                <td><%= material.ap %></td>
                <td><%= material.popc %></td>
                <td><%= material.ep %></td>
                <td><%= material.enr %></td>
                <td><%= material.er %></td>
                <td><%= material.weight %></td>
                <td><%= material.cost %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>


